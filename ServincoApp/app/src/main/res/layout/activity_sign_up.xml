<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@drawable/bg"
    tools:context=".activities.SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:visibility="invisible"
                android:id="@+id/btnSignInInvisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:textColor="#9e9b9b"
                android:text="@string/sign_in_button" />
            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@null"
                android:textColor="#9e9b9b"
                android:text="@string/sign_in_button" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/custom_button_design"
                android:text="@string/sign_up_button"
                android:textColor="@color/colorTextButton" />
            <Button
                android:visibility="invisible"
                android:id="@+id/btnSignUpInsvisble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/custom_button_design"
                android:text="@string/sign_up_button"
                android:textColor="@color/colorTextButton" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_edt_txt_corners"
                app:cardElevation="@dimen/edt_txt_card_elevation"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <EditText
                    android:id="@+id/edtTxtRegEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_txt_layout_height"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="@string/email_edt_txt_hint"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="16dp"
                    android:textColorHint="@color/hintColorEditText"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_edt_txt_corners"
                android:layout_marginBottom="16dp"
                app:cardElevation="@dimen/edt_txt_card_elevation"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <EditText
                    android:id="@+id/edtTxtRegUsername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_txt_layout_height"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="@string/username_edt_txt_hint"
                    android:inputType="textPersonName"
                    android:paddingLeft="16dp"

                    android:textColorHint="@color/hintColorEditText"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_edt_txt_corners"
                app:cardElevation="@dimen/edt_txt_card_elevation"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <EditText
                    android:id="@+id/edtTxtRegPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edt_txt_layout_height"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="@string/password_edt_txt_hint"
                    android:inputType="textPassword"
                    android:paddingLeft="16dp"
                    android:textColorHint="@color/hintColorEditText"
                    android:textSize="14sp" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnSignUpContin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/custom_rounded_transparent_button"
                android:text="@string/signup_btn_txt"
                android:textColor="@color/colorTextButton" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>



